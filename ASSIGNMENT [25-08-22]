/* Program to read a  string and convert alternative character into upper case */
#include<stdio.h>
	void main()
{
    char a[200];
    int l,i,b;
    printf("Enter the string:\n");
    scanf("%[^\n]s",a);
   for (i=0;a[i]!='\0';i++)
          l++;
   for(i=0;i<=l;i++)
   {
   	 if(i%2==0)
   	 {
   	   b=a[i];
   	 if(b>=65&&b<=90)
   	 a[i]=a[i]+32;
   	 else
   	 a[i]=a[i];
   }     
   else
   {
   	b=a[i];
   	if(b>=65&&b<=90)
   	 a[i]=a[i];
   	 else
   	 a[i]=a[i]-32;
   }
}
printf("%s",a);
}
